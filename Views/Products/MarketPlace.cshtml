@using System.Globalization

@model IEnumerable<MySoko.Models.Product>

@{
    ViewData["Title"] = "Market Place";
    var kenyanCulture = new CultureInfo("sw-KE"); // Kenyan currency culture
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-2">
                <div class="card">
                    <img class="card-img-top" src="@Url.Action("GetImage", new { id = item.ProductId })" alt="Product Image" />
                    <div class="card-body">
                        <h6 class="card-title">
                            @item.Price.ToString("C", kenyanCulture) <!-- Format as KSh -->
                        </h6>
                        <p id="itemDescription" class="card-text">@item.Description</p>
                        <button class="btn btn-outline-primary btn-sm add-to-cart"
                                onclick="addToCart('@item.Name', @item.Price)">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<div id="cart" class="card-cart"
    style="display: none; position: fixed; top: 15%; right: 0%; width: 300px; z-index: 1000; background-color:  #fff0f5; border-radius: 5px;;">
    <div class="card-body">
        <table id="cart-items" class="table table-sm">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Amount</th>
                    <th>Del</th>
                </tr>
            </thead>
            <tbody>
                <!-- Cart items will be inserted here -->
            </tbody>
        </table>
    </div>
    <div class="card-cart-footer"
        style="display: flex; justify-content: space-between; align-items: center; padding: 10px;">
        <div>
            <button class="btn btn-danger btn-sm" onclick="clearCart()">Clear</button>
            <button class="btn btn-success btn-sm" onclick="checkoutCart()">Checkout</button>

        </div>
        <strong style="color: BLUE;">Total: <span id="cart-total" style="color:BLUE">0.00</span></strong>
    </div>
</div>
<!-- Checkout Summary Modal -->
<div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="checkoutModalLabel">Cart Summary</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody id="modal-cart-items">
                        <!-- Cart items will be inserted here -->
                    </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <strong>Total: KSh <span id="modal-cart-total">0.00</span></strong>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Proceed to Payment</button>
            </div>
        </div>
    </div>
</div>
