@{
    ViewData["Title"] = "Home Page";
    var firstName = ViewBag.FirstName ?? "Anonymous"; // Set default to "Anonymous"
    var isReadOnly = User.Identity.IsAuthenticated ? "" : "readonly"; // Check if authenticated
    


}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-3 mb-4">Welcome to MySoko!</h1>
            <p class="lead mb-5">Discover the best deals and shop your favorite products with ease. Enjoy a seamless shopping experience with our user-friendly interface and top-notch customer service.</p>
            <a href="/products" class="btn btn-primary btn-lg">Shop Now</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <h3 class="h4">Exclusive Deals</h3>
            <p>Find limited-time offers and discounts on top products. Don't miss out on our exclusive deals and promotions.</p>
        </div>
        <div class="col-md-4 text-center">
            <h3 class="h4">Top Categories</h3>
            <p>Explore a wide range of categories from electronics to fashion. Shop by category to find exactly what you're looking for.</p>
        </div>
        <div class="col-md-4 text-center">
            <h3 class="h4">Customer Support</h3>
            <p>Our dedicated support team is here to help you with any questions or concerns. Reach out to us for assistance anytime.</p>
        </div>
    </div>
</div>

<div class="chat-container">
    <div class="chat-header" id="chatHeader">
        <i class="fa fa-comments" aria-hidden="true"></i> Chat
    </div>
    <div class="chat-box" id="chatBox">
        <div class="messages" id="messagesList">
            <!-- Messages will be dynamically added here -->
        </div>
        <form>
        <div class="input-container">
            <input type="hidden" id="userInput" value="@firstName" />
            <input type="text" autocomplete="off" id="messageInput" class="message-input" placeholder="Type a message..." />
            <button id="sendButton" class="send-btn"><i class="fa fa-paper-plane"></i></button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
