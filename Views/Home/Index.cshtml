<div id="cart" class="card-cart">
        <div class="card-body">
            <strong><h5>Cart</h5></strong>
            <table id="cart-items">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Quantity</th>
                        <th>Amount</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Cart items will be inserted here -->
