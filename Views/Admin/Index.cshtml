@{
    ViewData["Title"] = "User Management Dashboard";
}
@model IEnumerable<MySoko.Data.ApplicationUser>
<h2>Welcome to the Amin Dashboard</h2>




<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.UserRoles</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
